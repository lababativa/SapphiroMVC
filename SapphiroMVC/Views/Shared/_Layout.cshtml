<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SAPPHIRO SOFTWARE CONTABLE WEB </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited{
            background-color: #ffffff;
            border-radius: 50px;
        }
        
        .navbar {
            min-height: 100px;
            border-color: white;
            background-image: linear-gradient( 180deg, #B9BDF3, #ffffff) ;
        }
    </style>
</head>
<body >
    
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                

            </div>
            <div class="navbar-collapse collapse row">
                <div class="col-lg-1">
                    <h1 class="text-hide"></h1>
                    <ul class="nav navbar-nav navbar-left ">
                        <li><img src="~/Imagenes/LOGO-SAPPHIRO.png" height= 70px ></li></ul>
                </div>
                <div class="col-lg-11">
                    <h1 class="text-hide"></h1>
                    <ul class="nav navbar-nav navbar-right ">
                        <li>@Html.ActionLink("INICIO", "Index", "Home")</li>
                        <li>@Html.ActionLink("CONTACTANOS", "Contact", "Home")</li>
                        <li>@Html.ActionLink("LOGIN", "Login", "Home", null, new { @class = "btn btn-primary" })</li>

                    </ul>                                                               
                </div>
                <div class="col-lg-12">
                    <h1 class="text-hide"></h1> 
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SAPPHIRO SOFTWARE CONTABLE</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
